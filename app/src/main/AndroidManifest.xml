<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dictionaryapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.example.dictionaryapp.application.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_dictionary_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_dictionary_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.dictionaryapp.SplashActivity"
            android:exported="true"
            android:launchMode="singleInstance"
            android:screenOrientation="fullSensor"
            android:theme="@style/SplashTheme"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.dictionaryapp.MainActivity"
            android:exported="true"
            android:screenOrientation="fullSensor" />

    </application>

</manifest>